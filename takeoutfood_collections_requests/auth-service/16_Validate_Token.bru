meta {
  name: Validate Token
  type: http
  seq: 16
}

get {
  url: {{baseUrl}}/api/dev/token/validate
  body: none
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

headers {
  Content-Type: application/json
  Authorization: Bearer {{accessToken}}
}

tests {
  test("Status should be 200", function() {
    expect(res.getStatus()).to.equal(200);
  });

  test("Should return token validation info", function() {
    expect(res.getBody()).to.have.property('valid');
    expect(res.getBody()).to.have.property('subject');
    expect(res.getBody()).to.have.property('expiresAt');
    expect(res.getBody()).to.have.property('remainingTime');
  });

  test("Token should be valid", function() {
    expect(res.getBody().valid).to.be.true;
  });
}